<%- include("header",{header:header,whomToLogin:whomToLogin,name:name,email:email}) -%>

    <div class="wrapper">
        <div class="title">Your Profile</div>
        <form action="/resetPassword" method="POST">
            <div class="field">
                <input type="text" required name="name" readonly>
                <label>
                    <%= name %>
                </label>
            </div>
            <div class="field">
                <input type="email" required name="email" readonly>
                <label>
                    <%= emailAddress %>
                </label>
            </div>
            <div class="field">
                <input type="text" required name="rollNo" readonly>
                <label><%=rollNo%></label>
            </div>
            <% if(whomToLogin!=="Admin"){ %>
            <div class="field">
                <input type="text" required name="course" readonly>
                <label><%=course%></label>
            </div>
            <% } %>
        </form>
    </div>

    <%- include("footer") -%>